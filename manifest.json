{
  "manifest_version": 2,

  "name": "New VK Settings",
  "description": "Кастомизация интерфейса новой версии VK",
  "version": "0.3",
  "icons": { "16": "/icons/16.png",
           "48": "/icons/48.png",
          "128": "/icons/128.png" },
  "options_page": "/html/settings.html",
  "background": {
    "scripts": ["/js/events.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://*.vk.com/*"],
      "js": ["/js/jquery-3.0.0.min.js", "/js/vk-insert.js"],
      "css": ["/css/vk-insert.css"]
    }
  ],
  "browser_action": {
       "default_title": "New VK Settings"
  }
}
